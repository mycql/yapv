{
  "name": "yapv",
  "version": "0.1.0",
  "description": "Yet Another Plasmid Viewer: A DNA plasmid viewer using web technologies",
  "main": "dist/Canvas.yapv-0.1.0.js",
  "scripts": {
    "clean": "rimraf dist",
    "lint:ts": "tslint --project tsconfig.json",
    "lint": "npm run lint:ts",
    "prep": "npm run clean && npm run lint",
    "build": "npm run prep && rollup -c --environment INCLUDE_DEPS,BUILD:development",
    "bundle": "npm run build --environment BUILD:production",
    "serve:watch": "rollup -c --watch --environment INCLUDE_DEPS,BUILD:development",
    "serve:browse": "browser-sync start --server --startPath 'examples/index.html' --files 'examples' 'dist'",
    "serve": "npm run prep && concurrently --kill-others \"npm run serve:watch\" \"npm run serve:browse\"",
    "start": "npm run serve"
  },
  "keywords": [
    "DNA",
    "plasmid",
    "canvas",
    "vector",
    "feature",
    "annotation"
  ],
  "author": "Christopher Luna",
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^16.4.16",
    "@types/react-dom": "^16.0.9",
    "browser-sync": "^2.26.3",
    "concurrently": "^4.0.1",
    "hyperapp": "^1.2.9",
    "rimraf": "^2.6.2",
    "rollup": "^0.66.6",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-typescript": "^1.0.0",
    "rollup-plugin-uglify": "^6.0.0",
    "tslint": "^5.11.0",
    "typescript": "^3.1.3"
  }
}
