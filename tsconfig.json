{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "module": "es2015",
    "target": "es2015",
    "pretty": true,
    "allowJs": false,
    "charset": "utf8",
    "forceConsistentCasingInFileNames": true,
    "allowUnreachableCode": false,
    "newLine": "LF",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "strict": true,
    "strictNullChecks": true,
    "jsx": "preserve"
  },
  "include": [
    "./src/main/script/**/*.ts*",
    "./src/test/script/**/*.ts*"
  ]
}